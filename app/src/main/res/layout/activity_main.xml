<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 코로나"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13pt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sector_design"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/corona_std_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/sector_inner_design"
                android:layout_margin="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/corona_text_confirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/corona_text_confirmed_var"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:textStyle="bold"
                        android:textColor="#FF0000"
                        android:padding="6dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/corona_text_confirmed_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11pt"
                    android:textStyle="bold"
                    android:textColor="#46649B"
                    android:padding="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/sector_inner_design"
                android:layout_margin="5dp"
                >
            <TextView
                android:id="@+id/corona_text_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11pt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="6dp"/>
                <TextView
                    android:id="@+id/corona_text_release_var"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11pt"
                    android:textStyle="bold"
                    android:textColor="#0000FF"
                    android:padding="6dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/sector_inner_design"
                android:layout_margin="5dp"
                >
            <TextView
                android:id="@+id/corona_text_dead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11pt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="6dp"/>
                <TextView
                    android:id="@+id/corona_text_dead_var"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11pt"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:padding="6dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/sector_inner_design"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11pt"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="백신 접종 현황"
                    android:padding="6dp"/>
            <TextView
                android:id="@+id/corona_text_vaccine_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="#0064CD"
                android:padding="6dp"/>
                <TextView
                    android:id="@+id/corona_text_vaccine_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#14148C"
                    android:padding="6dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/sector_inner_design"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11pt"
                    android:textStyle="bold"
                    android:text="전 세계 확진자"
                    android:textColor="#000000"
                    android:padding="6dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/corona_text_world"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/corona_text_world_var"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11pt"
                        android:textStyle="bold"
                        android:textColor="#FF0000"
                        android:padding="6dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/corona_text_distancing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9.5pt"
                android:textStyle="bold"
                android:textColor="#41A541"
                android:padding="6dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 날씨"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13pt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sector_design"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:textColor="#000000"
                android:padding="6dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 환율"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13pt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sector_design"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:textColor="#000000"
                android:padding="6dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 실시간 이슈"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13pt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sector_design"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15pt"
                android:textColor="#000000"
                android:padding="6dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>